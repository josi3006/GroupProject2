<h1>Comments by the Users</h1>



<!-- Pass in data from server.js -->
<ul>
  {{#each comment}}
  	<li>
  		<p><span class="label">Author:</span> {{this.name}}</p>
      <p><span class="label">Song Title:</span> {{this.songtitle}}</p>
      <p><span class="label">Comment by Author:</span> {{this.comment}}</p>
{{this.comment}}
      

     
  	</li>
  {{/each}}
</ul>

<h2>This is where users can add comments</h2>

<form class="create-form">

  <div class="form-group">
    <label for="auth">Author:</label>
    <input type="text" id="auth" name="author">
  </div>

<div class = "form-group">
  <label for = "song"> Song: </label>
  <input type = "text" id = "songComm" name = "songText">
</div>
  <div class="form-group">
    <label for="quo">Comment:</label>
    <textarea id="quo" name="quote" rows="8" cols="40"></textarea>
  </div>

  <button type="submit">Add Comment</button>
</form>
